/* pages/video/video.wxss */
.container {
    position: relative;
    width: 100vw;
    min-height: 100vh;
    margin: 0;
    padding: 0;
    font-size: 16px;
}

.bg {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
}

.container-mask {
    position: relative;
    width: 100%;
    min-height: 100vh;
    /* height: 100%; */
    /* padding-top: 100rpx; */
    /* background-color: rgba(103, 118, 214, 0.1); */
    /* background-image: linear-gradient(to bottom, rgba(65, 184, 131, .9), rgba(157, 255, 0, 0.575)); */
    background: rgba(152, 246, 137, 0.8);
}

.background {
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index: -1;
}

.inputBar {
    width: 90%;
    background-color: white;
    padding: 15rpx;
    border: 1rpx solid rgba(220, 220, 220, .5);
    font-size: .8rem;
    border-radius: 5rpx;
    margin: 10rpx auto;
}