.container {
	width: 100vw;
	min-height: 100vh;
	margin: 0;
	padding: 0;
	font-size: 16px;
	background-size: 20px;
	background-image: url('data:image/jpeg;base64,');
	background-repeat: repeat;
}

.bg {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: -1;
}

.container-mask {
	position: relative;
	width: 100%;
	min-height: 100vh;
	/* height: 100%; */
	/* padding-top: 100rpx; */
	/* background-color: rgba(103, 118, 214, 0.1); */
	background-image: linear-gradient(to bottom right, rgba(227, 231, 238, 0.1), rgba(210, 215, 222, 0.1));
}