.container {
	position: relative;
	width: 100vw;
	min-height: 100vh;
	margin: 0;
	padding: 0;
	font-size: 16px;
	background-size: 20px;
	background-image: url('data:image/jpeg;base64,');
	background-repeat: repeat;
}

.bg {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: -1;
}

.container-mask {
	position: relative;
	width: 100%;
	min-height: 100vh;
	/* height: 100%; */
	/* padding-top: 100rpx; */
	/* background-color: rgba(103, 118, 214, 0.1); */
	/* background-image: linear-gradient(to bottom right, rgba(190, 190, 190, 0.6), rgba(255, 255, 255, 0.6)); */
}

.img {
	display: inline-block;
	width: 50rpx;
	height: 50rpx;
}

.container-item {
	width: 90%;
	margin: 20rpx auto;
	padding: 10rpx;
	/* border: 1rpx solid #808080; */

	border-radius: 10rpx;
	box-shadow: 0 2px 4px rgba(0, 0, 0, .22), 0 0 6px rgba(0, 0, 0, .14)
}



/* 方向键按钮整体区域 */
.buttonBox {
	display: flex;
	flex-direction: column;
	align-items: center;
}

/* 方向键按钮第二行 */
.buttonBox view {
	display: flex;
	flex-direction: row;
}

/* 所有方向键按钮 */

.buttonBox button {
	width: 100rpx;
	height: 100rpx;
}

button {
	margin: 10rpx;
}