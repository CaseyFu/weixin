.container {
	position: relative;
	width: 100vw;
	min-height: 100vh;
	margin: 0;
	padding: 0;
	font-size: 16px;
}

.bg {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: -1;
}

.container-mask {
	position: relative;
	width: 100%;
	min-height: 100vh;
	/* height: 100%; */
	/* padding-top: 100rpx; */
	/* background-color: rgba(103, 118, 214, 0.1); */
	background-image: linear-gradient(to bottom right, rgba(234, 214, 238, .6), rgba(160, 241, 234, .6));
}

.img {
	display: inline-block;
	width: 50rpx;
	height: 50rpx;
}

.container-item {
	width: 90%;
	margin: 20rpx auto;
	padding: 10rpx;
	/* border: 1rpx solid #808080; */

	border-radius: 10rpx;
	box-shadow: 0 2px 4px rgba(0, 0, 0, .22), 0 0 6px rgba(0, 0, 0, .14)
}

/* 关卡列表区域 */
.levellist {
	width: 100%;
}

/* 单个关卡区域 */
.level {
	width: 50%;
	float: left;
	margin: 20rpx 0;
	display: flex;
	flex-direction: column;
	align-items: center;
}


/* 选关图片 */
image {
	width: 300rpx;
	height: 300rpx;
}