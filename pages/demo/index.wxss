.container {
	position: relative;
	width: 100vw;
	min-height: 100vh;
	margin: 0;
	padding: 0;
	font-size: 16px;
}

.bg {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: -1;
}

.container-mask {
	position: relative;
	width: 100%;
	min-height: 100vh;
	/* height: 100%; */
	/* padding-top: 100rpx; */
	/* background-color: rgba(103, 118, 214, 0.1); */
	/* background-image: linear-gradient(to bottom, rgba(65, 184, 131, .9), rgba(157, 255, 0, 0.575)); */
	background: rgba(157, 255, 0, 0.575);
}


.do-flex-row {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: flex-start;
	align-items: center;
	align-content: center;
}

.do-flex-column {
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	justify-content: flex-end;
	align-items: flex-end;
	align-content: flex-end;
}

.row-item {
	background-color: pink;
}

.item {
	display: block;
	background: lightgray;
	width: 150rpx;
	height: 150rpx;
	margin: 5rpx;
	text-align: center;
	line-height: 150rpx;
}




