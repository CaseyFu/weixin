/**app.wxss**/

body {
    font-size: 16px;
}

.container {
    font-family: "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif;
    font-weight: normal;
    font-style: normal;
    margin-bottom: 40rpx;
}

.box {
    border: 1rpx solid gray;
    margin: 30rpx;
    padding: 15rpx;
}

.do-flex-row {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-start;
    align-content: space-between;
}

/* .item {
    display: block;
} */

.text-title-type {
    text-align: center;
    margin-bottom: 20rpx;
    color: #808080;
    font-weight: bold;
}

.text-link-type {
    color: #00A2E8;
}

.text-align-center {
    text-align: center;
}

textarea,
input {
    border: 1rpx solid gray;
    padding: 10rpx;
    border-radius: 8rpx;
}

.stuff {
    height: 30rpx;
}

.big-stuff {
    height: 100rpx;
}

.bg {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
}

.background {
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index: -1;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.clearfix {
    clear: both;
}